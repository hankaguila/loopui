{
  "name": "loopui",
  "version": "1.0.1",
  "description": "Build CLI apps for the ordinary user",
  "keywords": [
    "cli",
    "commander",
    "yargs"
  ],
  "author": "Henry Aguila",
  "license": "MIT",
  "funding": {
    "type": "patreon",
    "url": "https://www.patreon.com/user?u=80437116"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hankaguila/loopui"
  },
  "homepage": "https://github.com/hankaguila/loopui#readme",
  "bugs": "https://github.com/hankaguila/loopui/issues",
  "files": ["dist"],
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "node": "node --experimental-specifier-resolution=node --no-warnings",
    "test": "vitest --dir=test run --reporter=verbose",
    "lint": "eslint src --fix",
    "dist:types": "tsc && npm run node scripts/mergeDeclarationFiles.js && shx rm -rf dist/types && eslint dist/**/*.ts --fix",
    "dist:cjs": "esbuild src/index.ts --bundle --format=cjs --platform=node --outfile=dist/index.cjs",
    "dist:esm": "esbuild src/index.ts --bundle --format=esm --platform=node --outfile=dist/index.mjs",
    "dist": "shx rm -rf dist && npm run dist:cjs && npm run dist:esm && npm run dist:types"
  },
  "devDependencies": {
    "@types/dedent": "^0.7.0",
    "@types/node": "^18.11.18",
    "@types/validator": "^13.7.17",
    "@typescript-eslint/parser": "^5.48.0",
    "esbuild": "^0.18.7",
    "eslint": "8.22.0",
    "shx": "^0.3.4",
    "tsx": "^3.12.7",
    "typescript": "^4.9.5",
    "validator": "^13.9.0",
    "vitest": "^0.32.0"
  },
  "dependencies": {
    "dedent": "^0.7.0"
  }
}
